<div class="row">
  <% @paper_books.each do |book|%>
  <a href="/books/<%= book.seo %>" class="col-md-4 col-xs-6 book_panel_link">
    <img src="<%= book.cover %>" alt="<%= book.title %>" title="<%= book.title %>" />
    <!-- <%= book.title %> -->
  </a>
  <% end %>
  
  <% @free_books.each do |book|%>
  <a href="/books/<%= book.seo %>" class="col-md-4 col-xs-6 book_panel_link">
    <img src="<%= book.cover %>" alt="<%= book.title %>" title="<%= book.title %>" />
    <!-- <%= book.title %> -->
  </a>
  <% end %>

</div>


<% if @lists %>
<div class="row">
  <h2 class="section_title">Списки книг:</h2>
  <% @lists.each do |list|%>
  <a href="/lists/<%= list.seo %>" class="list_href col-centered col-xs-10">
    <img src="<%= list.thumb %>" alt="<%= list.title %>" title="<%= list.title %>" />
    <div><%= list.title %></div>
  </a>
  <% end %>
</div> 
<% end %>
